                  when 2 then 'top: 145px; right: 32%; transform: rotate(30deg) scale(0.87);'
                  when 3 then 'top: 205px; right: 8%; transform: rotate(-10deg) scale(1.03);'
                  when 4 then 'top: 265px; right: 22%; transform: rotate(18deg) scale(0.96);'
                  when 5 then 'top: 325px; right: 35%; transform: rotate(-22deg) scale(0.89);'
                  when 6 then 'top: 35px; right: 40%; transform: rotate(8deg) scale(1.07);'
                  when 7 then 'top: 95px; right: 46%; transform: rotate(-35deg) scale(0.93);'
                  when 8 then 'top: 155px; right: 12%; transform: rotate(20deg) scale(1.01);'
                  when 9 then 'top: 215px; right: 28%; transform: rotate(-12deg) scale(0.97);'
                  when 10 then 'top: 275px; right: 42%; transform: rotate(28deg) scale(1.11);'
                  when 11 then 'top: 55px; right: 26%; transform: rotate(-6deg) scale(0.86);'
                  when 12 then 'top: 115px; right: 34%; transform: rotate(22deg) scale(0.92);'
