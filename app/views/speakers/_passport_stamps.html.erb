            <span class="field-label">Website:</span>
            <span class="field-value"><%= URI.parse(speaker.website).host&.upcase rescue speaker.website.upcase %></span>
          </div>
        <% end %>
      </div>
    </div>
    
    <% if speaker.kept_talks.any? %>
      <div class="talk-dates">
        <% sorted_talks = speaker.kept_talks.joins(:event).where.not(events: { start_date: nil }).order('events.start_date').limit(3) %>
        <% if sorted_talks.first %>
          <div class="field">
            <span class="field-label">First Talk:</span>
            <span class="field-value"><%= sorted_talks.first.event.start_date.strftime('%d %b %Y') if sorted_talks.first.event.start_date %></span>
          </div>
        <% end %>
