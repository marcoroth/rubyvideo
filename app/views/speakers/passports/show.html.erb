    <p class="text-xs text-gray-500 italic">"Matz is nice and so we are nice"</p>
  </div>
</div>

<!-- Statistics Page -->
<div class="passport-page">
  <h2 class="text-2xl font-bold mb-6 text-center border-b-2 border-red-600 pb-2">Ruby Journey</h2>
  
  <div class="grid grid-cols-2 gap-4 mb-6">
    <div class="text-center p-4 bg-red-50 rounded">
      <p class="text-3xl font-bold text-red-600"><%= @total_talks %></p>
      <p class="text-sm text-gray-600">Talks Given</p>
    </div>
    <div class="text-center p-4 bg-red-50 rounded">
      <p class="text-3xl font-bold text-red-600"><%= @total_events %></p>
      <p class="text-sm text-gray-600">Events Attended</p>
    </div>
    <div class="text-center p-4 bg-red-50 rounded">
      <p class="text-3xl font-bold text-red-600"><%= @countries_visited.length %></p>
      <p class="text-sm text-gray-600">Countries</p>
    </div>
    <div class="text-center p-4 bg-red-50 rounded">
      <p class="text-3xl font-bold text-red-600"><%= @years_active %></p>
      <p class="text-sm text-gray-600">Years Active</p>
    </div>
  </div>
  
  <div class="mb-4">
    <p class="text-sm font-semibold mb-2">Countries Visited:</p>
    <div class="flex flex-wrap gap-2">
      <% @countries_visited.first(10).each do |country| %>
        <span class="px-2 py-1 bg-gray-100 rounded text-xs"><%= country.translations["en"] %></span>
      <% end %>
      <% if @countries_visited.length > 10 %>
        <span class="px-2 py-1 bg-gray-100 rounded text-xs">+<%= @countries_visited.length - 10 %> more</span>
      <% end %>
    </div>
  </div>
  
  <div>
    <p class="text-sm font-semibold mb-2">Recent Talks:</p>
    <div class="space-y-1">
      <% @talks_given.limit(5).each do |talk| %>
        <div class="text-xs">
          <span class="font-medium"><%= talk.title.truncate(40) %></span>
          <span class="text-gray-500">(<%= talk.event.name %>)</span>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Event Stamps Page 1 -->
<div class="passport-page">
  <h2 class="text-xl font-bold mb-4 text-center border-b-2 border-red-600 pb-2">Event Stamps</h2>
  <p class="text-xs text-center text-gray-500 mb-4">Events attended with stickers</p>
  
  <div class="stamp-grid">
    <% @events_with_stickers.first(6).each do |event| %>
      <div class="stamp-box p-2 flex flex-col items-center justify-center">
        <% if event.sticker? %>
          <%= image_tag event.sticker_image_path, class: "w-16 h-16 object-contain", alt: event.name %>
          <span class="text-xs mt-1 text-center text-gray-600"><%= event.start_date&.year %></span>
        <% end %>
      </div>
    <% end %>
    <% (6 - @events_with_stickers.first(6).count).times do %>
      <div class="stamp-box">
        <span class="text-xs">Event Stamp</span>
      </div>
    <% end %>
  </div>
</div>

<!-- Event Stamps Page 2 -->
<div class="passport-page">
  <h2 class="text-xl font-bold mb-4 text-center border-b-2 border-red-600 pb-2">Event Stamps</h2>
  
  <div class="stamp-grid">
    <% @events_with_stickers.slice(6, 6).each do |event| %>
      <div class="stamp-box p-2 flex flex-col items-center justify-center">
        <% if event.sticker? %>
          <%= image_tag event.sticker_image_path, class: "w-16 h-16 object-contain", alt: event.name %>
          <span class="text-xs mt-1 text-center text-gray-600"><%= event.start_date&.year %></span>
        <% end %>
      </div>
    <% end %>
    <% stamps_shown = @events_with_stickers.slice(6, 6)&.count || 0 %>
    <% (6 - stamps_shown).times do %>
      <div class="stamp-box">
        <span class="text-xs">Event Stamp</span>
      </div>
    <% end %>
  </div>
</div>

