<%= link_to event_path(event), class: "group" do %>
  <div class="overflow-hidden rounded-lg bg-white border hover:border-primary/50 transition-colors">
    <div class="aspect-[16/9] overflow-hidden">
      <%= image_tag image_path(event.card_image_path), 
          class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-300", 
          alt: event.name, 
          width: 300, 
          height: 175 %>
    </div>
    <div class="p-4">
      <h3 class="font-semibold text-lg text-slate-800 line-clamp-1 group-hover:text-primary transition-colors">
        <%= event.name %>
      </h3>
      <div class="mt-2 space-y-1">
        <p class="text-sm text-slate-600">
          <% if event.location && event.location != "Earth" %>
            <%= event.location %> â€¢
          <% end %>
          <%= event.formatted_dates %>
        </p>
        <p class="text-sm text-slate-500">
          <%= pluralize(event.talks_count, "talk") %>
        </p>
      </div>
    </div>
  </div>
<% end %>
