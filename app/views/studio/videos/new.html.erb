<div class="container mx-auto px-4 py-8 max-w-4xl">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold">Add Video to <%= @event.name %></h1>
    <%= link_to "Back to Videos", studio_event_videos_path(@event), class: "btn btn-outline" %>
  </div>

  <div class="card bg-base-100 border">
    <div class="card-body">
      <%= form_with url: studio_event_videos_path(@event), local: true do |form| %>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div class="form-control md:col-span-2">
            <%= form.label :title, class: "label" %>
            <%= form.text_field :title, class: "input input-bordered w-full", required: true %>
          </div>

          <div class="form-control md:col-span-2">
            <%= form.label :raw_title, "Raw Title (original)", class: "label" %>
            <%= form.text_field :raw_title, class: "input input-bordered w-full" %>
          </div>

          <div class="form-control md:col-span-2">
            <%= form.label :description, class: "label" %>
            <%= form.text_area :description, class: "textarea textarea-bordered w-full", rows: 4 %>
          </div>

          <div class="form-control">
            <%= form.label :video_provider, class: "label" %>
            <%= form.select :video_provider,
                  ["youtube", "vimeo", "mp4", "not_published", "not_recorded", "scheduled"],
                  {selected: "youtube"},
                  class: "select select-bordered w-full" %>
          </div>

          <div class="form-control">
            <%= form.label :video_id, "Video ID", class: "label" %>
            <%= form.text_field :video_id, class: "input input-bordered w-full",
                  placeholder: "dQw4w9WgXcQ" %>
            <label class="label">
              <span class="label-text-alt">YouTube video ID or URL</span>
            </label>
          </div>

          <div class="form-control">
            <%= form.label :date, "Talk Date", class: "label" %>
            <%= form.date_field :date, value: @video["date"], class: "input input-bordered w-full" %>
          </div>

          <div class="form-control">
            <%= form.label :published_at, "Published Date", class: "label" %>
            <%= form.date_field :published_at, class: "input input-bordered w-full" %>
          </div>

          <div class="form-control">
            <%= form.label :language, class: "label" %>
            <%= form.select :language,
                  ["english", "spanish", "french", "german", "japanese", "portuguese", "russian", "chinese"],
                  {selected: "english"},
                  class: "select select-bordered w-full" %>
          </div>

          <div class="form-control">
            <%= form.label :track, class: "label" %>
            <%= form.text_field :track, class: "input input-bordered w-full",
                  placeholder: "Main track, Workshop, etc." %>
          </div>

          <div class="form-control md:col-span-2">
            <%= form.label :slides_url, "Slides URL", class: "label" %>
            <%= form.text_field :slides_url, class: "input input-bordered w-full",
                  placeholder: "https://speakerdeck.com/..." %>
          </div>

          <div class="form-control md:col-span-2">
            <%= form.label :speakers, "Speakers (comma separated)", class: "label" %>
            <%= form.text_field :speakers, class: "input input-bordered w-full",
                  placeholder: "John Doe, Jane Smith" %>
          </div>

          <div class="divider md:col-span-2">Thumbnails (optional)</div>

          <div class="form-control">
            <%= form.label :thumbnail_xs, "Thumbnail XS URL", class: "label" %>
            <%= form.text_field :thumbnail_xs, class: "input input-bordered input-sm w-full" %>
          </div>

          <div class="form-control">
            <%= form.label :thumbnail_sm, "Thumbnail SM URL", class: "label" %>
            <%= form.text_field :thumbnail_sm, class: "input input-bordered input-sm w-full" %>
          </div>

          <div class="form-control">
            <%= form.label :thumbnail_md, "Thumbnail MD URL", class: "label" %>
            <%= form.text_field :thumbnail_md, class: "input input-bordered input-sm w-full" %>
          </div>

          <div class="form-control">
            <%= form.label :thumbnail_lg, "Thumbnail LG URL", class: "label" %>
            <%= form.text_field :thumbnail_lg, class: "input input-bordered input-sm w-full" %>
          </div>
        </div>

        <div class="form-control mt-6">
          <%= form.submit "Add Video", class: "btn btn-primary" %>
          <%= link_to "Cancel", studio_event_videos_path(@event), class: "btn btn-outline ml-2" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
